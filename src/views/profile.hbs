<div class="container p-4">
    <div class="col">
        <div class="col-p-4 mx-auto text-center">
            <h3>Welcome {{user.fullname}}</h3>
            <h4>{{user.username}}</h4>
        </div>
        {{#if favorites}}
        <h5 data-toggle="collapse" data-target="#favorites" class="row d-flex justify-content-center">Wikis Favoritas</h5>
        {{/if}}
        <div class="row d-flex justify-content-center">
            {{#each favorites}}
            <div id="favorites" class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{link}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <a class="btn btn-danger" href="/wikis/favorites/delete/{{id}}">
                            Delete Link
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-10 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Wikis guardadas o creadas a√∫n</p>
                    <div class="row d-flex justify-content-center">
                        <button class="btn btn-primary" href="/links/add">Crear Wiki</button>
                        <button class="btn btn-secondary" href="/wikis">Buscar wiki</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>