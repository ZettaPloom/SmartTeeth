<div class="container p-4">
    <div class="col">
        <div class="col-p-4 mx-auto text-center">
            <h3>Bienvenido {{user.fullname}}</h3>
            <h4>{{user.username}}</h4>
        </div>
        {{#if favorites}}
        <h5 data-toggle="collapse" data-target="#favorites" class="row d-flex justify-content-center">Wikis Favoritas
        </h5>
        {{else}}
        <div class="col-md-10 mx-auto">
            <div class="card-body text-center">
                <p>No hay Wikis favoritas aún</p>
            </div>
        </div>
        {{/if}}
        <div class="row d-flex justify-content-center">
            {{#each favorites}}
            <div id="favorites" class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{link}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <a class="btn btn-danger" href="/wikis/favorites/delete/{{id}}">
                            Delete Link
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{#if wikis}}
        <h5 data-toggle="collapse" data-target="#wikis" class="row d-flex justify-content-center">Wikis Creadas
        </h5>
        {{else}}
        <div class="col-md-10 mx-auto">
            <div class="card-body text-center">
                <p>No hay Wikis creadas aún</p>
            </div>
        </div>
        {{/if}}
        <div class="row d-flex justify-content-center">
            {{#each wikis}}
            <div id="wikis" class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{link}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <a class="btn btn-danger" href="/wikis/created/delete/{{id}}">
                            Delete Wiki
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="col-md-10 mx auto">
                <div class="card-body text-center">
                    <div class="row d-flex justify-content-center">
                        <a class="btn btn-primary" href="/wikis/created/add">Crear Wiki</a>
                        <a class="btn btn-secondary" href="/wikis">Buscar wiki</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>