<div class="container p-4">
    <div class="row">
        {{#each items}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="Enfermedades/{{this}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{this}}
                        </h3>
                    </a>
                    <a class="btn btn-secondary" href="Enfermedades/{{this}}">
                        Open
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not wikis in this section yet.</p>
                {{!-- <a href="/wikis/add">Create One!</a> --}}
            </div>
        </div>
        {{/each}}
    </div>
</div>