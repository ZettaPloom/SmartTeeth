<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Full name" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="username" placeholder="Username" class="form-control">
            </div>
            <div class="form-group">
              <input id="pass" type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <input id="passC" type="password" name="confirmPassword" placeholder="Confirm Password"
                class="form-control">
            </div>
            <div class="form-group">
              <button id="singinButton" class="btn btn-success btn-block">
                Sign up
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>